datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  userId   String  @id @default(cuid())
  email    String  @unique
  name     String
  password String
  session  Session?
}

model Session {
  sessionId String @id @default(uuid())
  userId    String @unique
  user      User   @relation(fields: [userId], references: [userId])
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  sqlSchema   String
  fillData    String
  subTask     SubTask[]
}

model SubTask {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  solution    String
  taskId      Int
  task        Task    @relation(fields: [taskId], references: [id])
}
