datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  password String
  session  Session[] // У пользователя может быть больше одной сессии
}

model Session {
  id           Int    @id @default(autoincrement())
  sessionToken String @unique
  userId       Int
  user         User   @relation(fields: [userId], references: [id])
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  sqlSchema   String
  fillData    String
  subTask     SubTask[]
}

model SubTask {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  solution    String
  taskId      Int
  task        Task    @relation(fields: [taskId], references: [id])
}
